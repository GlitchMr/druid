PERL6=<PERL6>
RAKUDO_DIR=<RAKUDO_DIR>
PERL6LIB='<PERL6LIB>:$(RAKUDO_DIR)'

SOURCES=lib/Druid/Base.pm lib/Druid/Game/Observer.pm \
        lib/Druid/Game/Subject.pm lib/Druid/Game.pm lib/Druid/View.pm \
        lib/Druid/View/Text.pm lib/Druid/Player.pm \
        lib/Druid/Player/Human.pm lib/Druid/Player/Computer.pm \
        lib/Test/Ix.pm lib/Druid/Webapp.pm

PIRS=$(SOURCES:.pm=.pir)

all: $(PIRS)

%.pir: %.pm
	env PERL6LIB=$(PERL6LIB) $(PERL6) --target=pir --output=$@ $<

clean:
	rm -f $(PIRS)

test: all
	env PERL6LIB=$(PERL6LIB) prove -e '$(PERL6)' -r --nocolor t/
